{
    "manifest_version": 3,
    "name": "Coloration Grammaticale",
    "version": "1.0",
    "description": "Colorie les noms, adjectifs, etc., en fonction des préférences de l'utilisateur.",
    "permissions": ["storage"],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ]
}