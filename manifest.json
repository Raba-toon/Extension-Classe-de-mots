{
  "manifest_version": 3,
  "name": "Coloration Grammaticale",
  "version": "1.0",
  "description": "Colore automatiquement les classes grammaticales sur une page web.",
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],  
      "exclude_matches": ["*://www.google.com/search*"],  
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}